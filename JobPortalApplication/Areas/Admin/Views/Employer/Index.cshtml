@model List<Employer>
<!-- Blank Start -->
<div class="container-fluid pt-4 px-0">
    <div class="row bg-light rounded mx-0">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h4 class="mb-0 fw-bold text-primary">Skill List</h4>
                    <a asp-area="Admin" asp-controller="Employer" asp-action="Upsert" class="btn btn-primary"><i class="fa-solid fa-circle-plus"></i> Add New Employer</a>
                </div>

                <div class="table-responsive ">
                    <table class="table table-striped table-hover ">
                        <thead>
                            <tr>
                                <th scope="col" class="text-center">Id</th>
                                <th scope="col" class="text-center">Username</th>
                                <th scope="col" class="text-center">Password</th>
                                <th scope="col" class="text-center">Email</th>
                                <th scope="col" class="text-center">Fullname</th>
                                <th scope="col" class="text-center">CompanyID</th>
                                <th scope="col" class="text-center">Location</th>
                                <th scope="col" class="text-center">Action</th
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in Model)
                            {
                                <tr>
                                    <td class="text-center">@obj.Id</td>
                                    <td class="text-center">@obj.Username</td>
                                    <td class="text-center">@obj.Password</td>
                                    <td class="text-center">@obj.Email</td>
                                    <td class="text-center">@obj.Fullname</td>
                                    <td class="text-center">@obj.Company.Name</td>
                                    <td class="text-center">@obj.Location</td>
                                    
                                    <td class="text-center">
                                            <a class="btn btn-sm btn-warning" asp-area="Admin" asp-controller="Employer" asp-action="Upsert" asp-route-id="@obj.Id">
                                                <i class="fa-solid fa-pen-to-square"></i> Edit
                                            </a>
                                            <a class="btn btn-sm btn-danger" asp-area="Admin" asp-controller="Employer" asp-action="Delete" asp-route-id="@obj.Id">
                                                <i class="fa-solid fa-trash"></i> Delete
                                            </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Blank End -->