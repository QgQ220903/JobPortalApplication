@model List<Company>
<!-- Blank Start -->
<div class="container-fluid pt-4 px-0">
    <div class="row bg-light rounded mx-0">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h4 class="mb-0 fw-bold text-primary">Company List</h4>
                    <a asp-area="Admin" asp-controller="Company" asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-circle-plus"></i> Add New Company</a>
                </div>

                <div class="table-responsive ">
                    <table class="table table-striped table-hover ">
                        <thead>
                            <tr>
                                <th scope="col" class="text-center">Id</th>
                                <th scope="col" class="text-center">Name</th>
                                <th scope="col" class="text-center">Industry</th>
                             @*    <th scope="col" asp-for="Description" class="text-center">Description</th>
                                <th scope="col" asp-for="Logo" class="text-center">Logo</th> *@
                             @*    <th scope="col" asp-for="Website" class="text-center">Website</th> *@
                                <th scope="col" class="text-center">Email</th>
                                <th scope="col" class="text-center">Phone</th>
                                <th scope="col" class="text-center">Create</th>
                                <th scope="col" class="text-center">Update</th>
                                <th scope="col" class="text-center">Action</th>
                                  
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in Model)
                            {
                                <tr>
                                    <td>@obj.Id</td>
                                    <td>@obj.Name</td>
                                    <td>@obj.Industry</td>
                                   @*  <td>@obj.Description</td>
                                    <td>@obj.Logo</td>
                                    <td>@obj.Website</td> *@
                                    <td>@obj.Email</td>
                                    <td>@obj.Phone</td>
                                    <td>@obj.Create.ToString("dd/MM/yyyy")</td>
                                    <td>@obj.Update?.ToString("dd/MM/yyyy")</td>
                                    <td class="text-center">
                                        <a class="btn btn-sm btn-warning" asp-area="Admin" asp-controller="Company" asp-action="Update" asp-route-id="@obj.Id">
                                            <i class="fa-solid fa-pen-to-square"></i> Edit
                                        </a>
                                        <a class="btn btn-sm btn-danger" asp-area="Admin" asp-controller="Company" asp-action="Delete" asp-route-id="@obj.Id">
                                            <i class="fa-solid fa-trash"></i> Delete
                                        </a>
                                        <a class="btn btn-sm btn-info" asp-area="Admin" asp-controller="Company" asp-action="Detail" asp-route-id="@obj.Id">
                                            <i class="fa-solid fa-ellipsis-h"></i> Detail
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Blank End -->